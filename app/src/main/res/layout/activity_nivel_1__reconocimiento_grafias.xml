            app:srcCompat="@drawable/letrabvacia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/letraPView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="188dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/letraQView2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/letraPVacia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/letrapvacia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/letraQView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="188dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/letraDView"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/letraQVacia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/letraqvacia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/letraDView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="188dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/letraPView1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/letraDVacia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/letradvacia" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"


        android:layout_width="403dp"
        android:layout_height="120dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="122dp"
            android:layout_height="117dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-29dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/imageView4"
            app:srcCompat="@drawable/letrabvacia" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="127dp"
            android:layout_height="117dp"
            android:layout_marginStart="-36dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/imageView"
