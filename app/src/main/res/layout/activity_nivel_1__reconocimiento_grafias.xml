    <ImageView
        android:id="@+id/letraBCompleta1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@+id/letraBView"
        app:layout_constraintTop_toTopOf="@+id/letraBView"
        app:srcCompat="@drawable/letrabcompleta" />

    <ImageView
        android:id="@+id/letraPCompleta2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@+id/letraPView2"
        app:layout_constraintTop_toTopOf="@+id/letraPView2"
        app:srcCompat="@drawable/letrapcompleta" />

    <ImageView
        android:id="@+id/letraQCompleta2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@+id/letraQView2"
        app:layout_constraintTop_toTopOf="@+id/letraQView2"
        app:srcCompat="@drawable/letraqcompleta" />

    <ImageView
        android:id="@+id/letraQCompleta1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@+id/letraQView1"
        app:layout_constraintTop_toTopOf="@+id/letraQView1"
        app:srcCompat="@drawable/letraqcompleta" />

    <ImageView
        android:id="@+id/letraDCompleta1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@+id/letraDView"
        app:layout_constraintTop_toTopOf="@+id/letraDView"
        app:srcCompat="@drawable/letradcompleta" />

    <ImageView
        android:id="@+id/letrapCompleta1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="@+id/letraPView1"
        app:layout_constraintTop_toTopOf="@+id/letraPView1"
        app:srcCompat="@drawable/letrapcompleta" />

    <LinearLayout
        android:id="@+id/letraPView1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="188dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/letrapvacia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/letrapvacia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/letraQView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="188dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/letraBView"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/letraQVacia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/letraqvacia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/letraBView"
        android:layout_width="90dp"
        android:layout_height="90dp"

